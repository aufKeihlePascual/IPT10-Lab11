<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    
    <div class = "container mt-5">
        <h1>Courses</h1>

        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Course Code</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Credits</th>
                </tr>
            </thead>
            <tbody>
                {{#items}}
                <tr>
                    <td>{{course_code}}</td>
                    <td>{{course_name}}</td>
                    <td>{{description}}</td>
                    <td class="text-center">{{credits}}</td>
                </tr>
                {{/items}}
            </tbody>
        </table>
        
        <div class="row">
            <div class="col-sm-10 offset-sm-1 d-flex justify-content-center mt-3">
                <a href="/students" class="btn btn-success me-2">List of students</a>
                <a href="/enrollment-form" class="btn btn-primary">Enroll a Student</a>
            </div>
        </div>
    </div>
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
