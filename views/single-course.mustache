<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class=container mt-5">
        <div class="row mb-4">
            <div class="col text-center">
                <h1 style="color:purple" class="mt-3">{{course.course_code}}</h1>
            </div>
        </div>
        <h2>{{course.course_name}}</h2>
            
        <p class="text-center text-muted mb-4">{{course.description}}</p>

        <table class="table table-striped table-dark table-bordered">
            <thead>
                <tr>
                    <th>Student Code</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                {{#enrolees}}
                <tr>
                    <td>{{student_code}}</td>
                    <td>{{name}}</td>
                </tr>
                {{/enrolees}}
                {{^enrolees}}
                <tr>
                    <td colspan="2" class="text-center">No enrollees found.</td>
                </tr>
                {{/enrolees}}
            </tbody>
            <tfoot>
                <tr class="table-info">
                    <td colspan="2" class="text-end">
                        <strong>Total Enrollees: {{total_enrolees}}</strong>
                    </td>
                </tr>
            </tfoot>
        </table>

        

        <div class="row">
            <div class="col-sm-10 offset-sm-1 d-flex justify-content-center mt-3">
                <a href="/students" class="btn btn-success me-2">List of students</a>
                <a class="btn btn-outline-primary me-2" href="/export-course/{{course.course_code}}">Export to PDF</a>
                <a href="/enrollment-form" class="btn btn-primary">Enroll a Student</a>
            </div>
        </div>
    </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <hr />
    

</body>
</html>
