<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h1>Students</h1>

        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Student Code</th>
                    <th>Student Name</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
                    <th>Sex</th>
                    <th class="text-center">Enrolled Courses</th>
                </tr>
            </thead>
            <tbody>
                {{#items}}
                <tr>
                    <td>{{student_code}}</td>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>{{birthdate}}</td>
                    <td>{{sex}}</td>
                    <td class="text-center">{{course_codes}}</td>
                </tr>
                {{/items}}
                {{^items}}
                <tr>
                    <td colspan="2">No students found.</td>
                </tr>
                {{/items}}
            </tbody>
            <tfoot>
                <tr class="table-info">
                    <td colspan="8" class="text-center">
                        <strong>Total Students: {{total_students}}</strong>
                    </td>
                </tr>
            </tfoot>
        </table>
        <br>
        <div class="d-flex justify-content-center mt-4">
            <a href="/courses" class="btn btn-primary me-2">List of courses</a>
            <a href="/students" class="btn btn-success">List of students</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


</body>
</html>
