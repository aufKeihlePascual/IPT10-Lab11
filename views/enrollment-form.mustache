<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container mt-5">
        <h1>Enrolment Form</h1>
        <br>
    
        <form action="/enroll" method="POST">
            <div class="mb-3 row">
                <label for="course_code" class="col-sm-2 col-form-label">Course</label>
                <div class="col-sm-10">
                    <select name="course_code" class="form-select">
                        {{#courses}}
                        <option value="{{course_code}}"> {{ course_name }} </option>
                        {{/ courses }}
                    </select>
                </div>
            </div>

            <div class="mb-3 row">
                <label for="student_code" class="col-sm-2 col-form-label">Student</label>
                <div class="col-sm-10">
                    <select name="student_code" class="form-select">
                        {{# students }}
                        <option value="{{student_code}}"> {{name}} </option>
                        {{/ students }}
                    </select>
                </div>
            </div>

            <div class="mb-3 row">
                <label for="enrollment_date" class="col-sm-2 col-form-label">Enrollment Date</label>
                <div class="col-sm-10">
                    <input name="enrollment_date" type="date" class="form-control">
                </div>
            </div>

            <div class="row">
                <div class="col-sm-10 offset-sm-2 d-flex justify-content-end">
                    <input type="submit" value="Enroll Student" class="btn btn-primary">
                </div>
            </div>
        </form>

        <hr class="my-4" />

        <div class="d-flex">
            <a href="/courses" class="btn btn-primary me-2">List of courses</a>
            <a href="/students" class="btn btn-success">List of students</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
